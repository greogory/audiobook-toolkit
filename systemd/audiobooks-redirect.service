[Unit]
Description=Audiobooks Library HTTP to HTTPS Redirect
Documentation=https://github.com/greogory/Audiobook-Manager
After=network-online.target audiobooks-proxy.service
Wants=audiobooks-proxy.service network-online.target

[Service]
Type=simple
User=audiobooks
Group=audiobooks
WorkingDirectory=/opt/audiobooks/library/web-v2

# Load configuration from /etc/audiobooks/audiobooks.conf
EnvironmentFile=/etc/audiobooks/audiobooks.conf
Environment=PYTHONUNBUFFERED=1

# Only start if port is not already in use
ExecStartPre=/bin/sh -c '! /usr/bin/lsof -i:${AUDIOBOOKS_HTTP_REDIRECT_PORT} >/dev/null 2>&1'
ExecStart=/usr/bin/python3 /opt/audiobooks/library/web-v2/redirect_server.py

Restart=on-failure
RestartSec=5
# Use journal logging (query with: journalctl -u audiobooks-redirect)
StandardOutput=journal
StandardError=journal
SyslogIdentifier=audiobooks-redirect

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ReadOnlyPaths=/etc/audiobooks /opt/audiobooks
ReadWritePaths=/var/lib/audiobooks  # default
ProtectHome=yes
PrivateTmp=yes

[Install]
WantedBy=audiobooks.target multi-user.target
