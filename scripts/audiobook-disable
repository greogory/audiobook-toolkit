#!/bin/bash
# =============================================================================
# Disable Audiobook Conversion Auto-start
# =============================================================================

YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}Disabling audiobook conversion auto-start...${NC}"
echo ""

# Disable services
systemctl disable audiobooks-converter.service
systemctl disable audiobooks-mover.service

echo ""
echo "âœ“ Auto-start disabled"
echo ""
echo "Services will NOT start automatically on boot."
echo "You can still start manually with: audiobook-start"
