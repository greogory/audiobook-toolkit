#!/bin/bash
# =============================================================================
# Stop Audiobook Conversion Services
# =============================================================================

RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m'

echo -e "${YELLOW}Stopping audiobook conversion services...${NC}"
echo ""

# Stop conversion
systemctl stop audiobooks-converter.service
echo -e "${GREEN}✓ Converter stopped${NC}"

# Stop mover
systemctl stop audiobooks-mover.service
echo -e "${GREEN}✓ Mover stopped${NC}"

echo ""
echo -e "${YELLOW}Note: Any in-progress conversions have been interrupted.${NC}"
echo "Staged files remain in tmpfs until moved or system reboot."
echo ""
echo "To save staged files before reboot: audiobook-save-staging"
